#!/usr/bin/env build

import "${1}"

for file in .synced .compiled .installed; do
	[ -f "${L}/${file}" ] && rm -f "${L}/${file}"
done

if [ -d "${BUILDER_PKGDIR}/${NAME}/build" ]; then
	rm -rf "${BUILDER_PKGDIR}/${NAME}/build"
fi

if [ -d "${BUILDER_PKGDIR}/${NAME}/install" ]; then
	rm -rf "${BUILDER_PKGDIR}/${NAME}/install"
fi

# vim: filetype=sh
