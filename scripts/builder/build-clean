#!/usr/bin/env build

echo "cleaning: ${1}"

case "${PKG_NAME}" in
# FIXME need a way to flag a path as NOCLEAN
(buildtools/*)	rm -f "$(build query --workdir "${1}")/.installed"; exit 0;;
esac
eval $(build query --environ "${1}")


for dir in "$(build query --workdir "${1}")" "$(build query --destdir "${1}")"; do
	if [ -d "${dir}" ]; then
		rm -rf "${dir}" &
	fi
done

wait

# vim: filetype=sh
